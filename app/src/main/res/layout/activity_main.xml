<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hjq.shape.view.ShapeButton
        android:id="@+id/btn_bid_ins"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        android:text="绘制地块"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/btn_get"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shape_radius="@dimen/dp_5"
        app:shape_solidColor="@color/common_accent_color" />

    <com.hjq.shape.view.ShapeButton
        android:id="@+id/btn_get"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        android:text="Get"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btn_parse_kml"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_bid_ins"
        app:shape_radius="@dimen/dp_5"
        app:shape_solidColor="@color/common_accent_color" />


    <com.hjq.shape.view.ShapeButton
        android:id="@+id/btn_parse_kml"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        android:text="ParseKML"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_get"
        app:shape_radius="@dimen/dp_5"
        app:shape_solidColor="@color/common_accent_color" />




</androidx.constraintlayout.widget.ConstraintLayout>